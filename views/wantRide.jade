extends layout

block content
    //include form.html
    block nav
    div(id="giveForm")
        h3= title
        form#form_new_ride(name="addride", method="post", action="/addride")
            div(class="form-group")
                label(for="name") Name
                input(type="text", class="form-control", id="name", placeholder="name")
            div(class="form-group")
                label(for="email") Email address
                input(type="email", class="form-control", id="email", placeholder="Email")
            div(class="form-group")
                label(for="date") date
                input(type="date", class="form-control", id="date", placeholder="Date")
            div(class="form-group")
                label(for="time") Time
                input(type="time", class="form-control", id="time", placeholder="Time")
            div(class="form-group")
                label(for="departing") Departing
                input(type="text", class="form-control", id="departing", placeholder="Departing")
            div(class="form-group")
                label(for="arriving") Arriving
                input(type="text", class="form-control", id="arriving", placeholder="Arriving")
            div(class="form-group")
                label(for="returndate") Return Date
                input(type="text", class="form-control", id="returndate", placeholder="returndate")
            button(type="reset", class="btn btn-default") clear
            button(type="submit", class="btn btn-default") submit
            br
            a(class="btn btn-default", role="button", href="giveRide") Offer a ride instead
